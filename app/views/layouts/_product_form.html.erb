<%= render "layouts/errors", :object => @recipe %>

<%= form_for @product do |f| %>
  <h4><%= f.label :name %></h4>
  <%= f.text_field :name %>
  <h4><%= f.label "Cost" %></h4>
  <%= f.number_field :cost step: 0.01 %>
  <h4><%= f.label "Country of Origin" %></h4>
  <%= f.text_field :country_of_origin %>
  <p><%= f.submit :Submit, class: 'btn btn-primary'  %></p>
<% end %>
