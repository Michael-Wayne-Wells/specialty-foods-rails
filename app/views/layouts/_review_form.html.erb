<%= render "layouts/errors", :object => @review %>

<%= form_for [@product, @review] do |f| %>
<% if current_user %>
  <%= f.hidden_field :author, value: current_user.username %>
  <% elsif current_admin %>
  <%= f.hidden_field :author, value: current_admin.username %>
  <% else %>
  <h4><%= f.label "Author Name"%></h4>
  <%= f.text_area :author %>
  <% end %>
  <h4><%= f.label "Review"%></h4>
  <%= f.text_area :content_body %>
  <h4><%= f.label "Rating"%></h4>
  <%= f.number_field :rating, in: 1..5 %>
  <br>
  <br>
  <p><%= f.submit :Submit, class: 'btn btn-primary' %></p>
<% end %>
